<Window x:Class="ThSpellCardRecordViewer.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThSpellCardRecordViewer"
        mc:Ignorable="d"
        Title="バージョン情報" Height="254" Width="348" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock x:Name="AppNameBlock"
                   HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="AppName" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <TextBlock x:Name="AppVersionBlock"
                   HorizontalAlignment="Center" Margin="0,58,0,0" TextWrapping="Wrap" Text="AppVersion" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="DeveloperBlock"
                   HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap" Text="Develeper" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="CloseButton" Content="閉じる(_C)" 
                Width="120" Height="24"
                HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Click="CloseButtonClick"/>

    </Grid>
</Window>
